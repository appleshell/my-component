{
  "name": "my-component-doc",
  "version": "1.0.3",
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "father-build",
    "build:all":"yarn clean && yarn build:cjs && yarn build:es && yarn build:cp",
    "build:cjs": "cross-env babel src --out-dir lib --ignore **/.umi/*,**/demo/* --extensions \".ts,.tsx\"",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es --ignore **/.umi/*,**/demo/* --extensions \".ts,.tsx\"",
    "build:cp": "cpy **/*.scss ../lib --cwd=src --parents && cpy **/*.scss ../es --cwd=src --parents ",
    "clean": "rimraf lib && rimraf es",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "release": "npm run build && npm publish",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "main": "lib/index",
  "module": "es/index",
  "typings": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "files": [
    "es",
    "lib"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@types/classnames": "^2.2.10",
    "antd": "^4.4.1",
    "classnames": "^2.2.6",
    "cross-env": "^7.0.2",
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@umijs/plugin-sass": "^1.1.1",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.0.5",
    "babel-loader": "^8.1.0",
    "cpy-cli": "^3.1.1",
    "dumi": "^1.0.9",
    "father-build": "^1.17.2",
    "gh-pages": "^3.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "yorkie": "^2.0.0"
  }
}
